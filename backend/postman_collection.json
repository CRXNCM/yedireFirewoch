        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankName\": \"Commercial Bank of Ethiopia\",\n  \"accountName\": \"Yedire Firewoch Charity Organization\",\n  \"accountNumber\": \"1000123456789\",\n  \"currency\": \"ETB\",\n  \"country\": \"Ethiopia\",\n  \"isPrimary\": true,\n  \"description\": \"Primary donation account for Ethiopian Birr donations\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/banks",
          "host": ["{{baseUrl}}"],
          "path": ["api", "banks"]
        }
      }
    },
    {
      "name": "08. Get All Schools (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/schools",
          "host": ["{{baseUrl}}"],
          "path": ["api", "schools"]
        }
      }
    },
    {
      "name": "09. Create School (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
