    {
      "name": "12. Get All Sponsors (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/sponsors",
          "host": ["{{baseUrl}}"],
          "path": ["api", "sponsors"]
        }
      }
    },
    {
      "name": "13. Create Sponsor (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Global Education Foundation\",\n  \"description\": \"Supporting education initiatives across Africa\",\n  \"website\": \"https://globaleducation.org\",\n  \"contactInfo\": {\n    \"email\": \"partnerships@globaleducation.org\",\n    \"phone\": \"+1-555-0123\"\n  },\n  \"sponsorshipType\": \"financial\",\n  \"sponsorshipLevel\": \"gold\",\n  \"contributionAmount\": 25000,\n  \"currency\": \"USD\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/sponsors",
          "host": ["{{baseUrl}}"],
          "path": ["api", "sponsors"]
        }
      }
    },
    {
      "name": "14. Upload Image (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "image",
              "type": "file",
              "src": "Choose a JPG/PNG file"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/upload/image",
          "host": ["{{baseUrl}}"],
          "path": ["api", "upload", "image"]
        }
      }
    },
    {
      "name": "15. Verify Token (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/verify-token",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "verify-token"]
        }
      }
    }
  ]
}
