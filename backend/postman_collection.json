{
  "info": {
    "name": "Donation Website API",
    "description": "Complete API testing collection for the donation website backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "01. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "02. Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('token', response.token);",
              "    console.log('Token saved:', response.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "03. Get Current User",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "04. Get All Alerts (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/alerts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "alerts"]
        }
      }
    },
    {
      "name": "05. Create Alert (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Urgent: Water Crisis in Village X\",\n  \"message\": \"We need immediate support to provide clean water to 500+ families in Village X. Your donation can save lives.\",\n  \"type\": \"urgent\",\n  \"priority\": 10,\n  \"showOnPages\": [\"home\", \"donate\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/alerts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "alerts"]
        }
      }
    },
    {
      "name": "06. Get All Banks (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/banks",
          "host": ["{{baseUrl}}"],
          "path": ["api", "banks"]
        }
      }
    },
    {
      "name": "07. Create Bank (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
