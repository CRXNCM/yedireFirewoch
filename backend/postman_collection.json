        },
        "url": {
          "raw": "{{baseUrl}}/api/schools",
          "host": ["{{baseUrl}}"],
          "path": ["api", "schools"]
        }
      }
    },
    {
      "name": "10. Get All Testimonials (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/testimonials",
          "host": ["{{baseUrl}}"],
          "path": ["api", "testimonials"]
        }
      }
    },
    {
      "name": "11. Create Testimonial (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sarah Johnson\",\n  \"message\": \"Supporting this organization has been incredibly rewarding. Seeing the impact of my donations on children's education in Ethiopia gives me hope for a better future.\",\n  \"title\": \"Regular Donor\",\n  \"organization\": \"Microsoft\",\n  \"type\": \"donor\",\n  \"location\": \"Seattle, USA\",\n  \"rating\": 5,\n  \"isFeatured\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/testimonials",
